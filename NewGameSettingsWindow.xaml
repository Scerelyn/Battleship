<Window x:Class="BattleShip.NewGameSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip"
        mc:Ignorable="d"
        Title="New Game Settings" Height="300" Width="400">
    <StackPanel Background="LightSteelBlue">
        <Label Content="Battleship" 
               HorizontalAlignment="Center"
               Background="DarkBlue"
               Foreground="OrangeRed"
               Margin="20"
               FontSize="24"/>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="AI Difficulty" Margin="10"/>
            <ComboBox x:Name="AIChoiceComboBox" 
                      SelectedIndex="0"
                      Width="200"
                      Height="25"
                      Margin="10"/>
        </StackPanel>
        <Button Content="Start a new game"
                Width="200"
                Height="25"
                Margin="10"
                x:Name="StartGameButton"/>
        <Button Content="Load a saved game"
                Width="200"
                Height="25"
                Margin="10"
                x:Name="LoadFileButton"/>
    </StackPanel>
</Window>
